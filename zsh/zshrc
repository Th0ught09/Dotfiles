# FUNCTIONS

# Force use z
# cd(){
#     echo "Time to use z"
#   }
#
# Don't install python packages outside of a conda env
function pip(){
    if [[ -z $CONDA_PREFIX || $CONDA_PREFIX == "/usr" ]]
      then
        echo "do not install python packages outside of or in a base conda env!!"
        return
    else
      command pip $@
    fi
}

